<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Github Login</title>
</head>
<body>
  <% if (!user) { %>
    <h1>Github Login</h1>
    <a href="/auth/github">Login with GitHub</a>
  <% } else { %>
    <h1>Welcome <%= user.login %></h1>
    <p>Your GitHub ID: <%= user.id %></p>
    <a href="/logout">Logout</a>
  <% } %>
</body>
</html>
